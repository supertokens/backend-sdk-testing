{
    "compilerOptions": {
        "target": "ES2016",
        "strictNullChecks": true,
        "declaration": true,
        "module": "commonJS",
        "moduleResolution": "Node",
        "sourceMap": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "lib": ["ES2017", "DOM"], // "DOM" is required for Request and Response types
        "experimentalDecorators": true,
        "outDir": "build",
        "rootDir": "./"
    },
    "include": ["./test/**/*.ts", "./api-mock/**/*.ts"],
    "exclude": ["build", "node_modules", "test/with-typescript", "test/framework/loopback-server"],
    "compileOnSave": true
}
